@{
    Layout = "";
    SelectList deptOptions = new SelectList(ViewBag.DeptList, "DepartmentID", "Name");
    SelectList addvisorList = new SelectList(ViewBag.AdvisorList, "ID", "FirstName");
}

@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Student</title>
    @* <link rel="stylesheet" href="add-style.css"> *@
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f0f8ff; /* Light blue background */
            color: #333;
        }

        /* --- Header & Navigation --- */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 2px solid #17a2b8; /* Blue-green accent */
            margin-bottom: 30px;
        }

            .page-header h1 {
                color: #007bff;
                font-size: 1.8em;
                margin: 0;
            }

        .back-link {
            text-decoration: none;
            color: #007bff;
            padding: 8px 15px;
            border: 1px solid #007bff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .back-link:hover {
                background-color: #e2f0ff;
            }

        /* --- Form Container --- */
        .add-container {
            max-width: 900px;
            margin: 0 auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .add-form {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        /* Fieldset/Section Styling */
        .form-section {
            border: 1px solid #cceeff; /* Light blue border */
            border-radius: 6px;
            padding: 20px;
            margin-bottom: 10px;
            background-color: #f7fbff;
            display: grid;
            /* Two columns for form fields */
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

            .form-section legend {
                font-size: 1.3em;
                font-weight: bold;
                color: #17a2b8; /* Blue-green legend */
                padding: 0 10px;
            }

        /* General Form Group */
        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                font-weight: 600;
                margin-bottom: 5px;
                color: #555;
            }

            /* Required field indicator */
            .form-group.required label::after {
                content: '*';
                color: #dc3545; /* Red asterisk */
                margin-left: 5px;
            }

            .form-group input,
            .form-group select {
                padding: 10px;
                border: 1px solid #ced4da;
                border-radius: 4px;
                font-size: 16px;
                width: 100%;
                box-sizing: border-box;
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                .form-group input:focus,
                .form-group select:focus {
                    border-color: #17a2b8;
                    box-shadow: 0 0 0 0.2rem rgba(23, 162, 184, 0.25);
                    outline: none;
                }

        /* --- Action Buttons --- */
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            padding-top: 20px;
        }

            .form-actions button {
                padding: 12px 25px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-weight: bold;
                transition: background-color 0.3s, transform 0.2s;
            }

        .add-button {
            background-color: #007bff; /* Primary Blue for Add */
            color: white;
        }

            .add-button:hover {
                background-color: #0056b3;
                transform: translateY(-1px);
            }

        .reset-button {
            background-color: #ffc107; /* Yellow for Reset */
            color: #333;
        }

            .reset-button:hover {
                background-color: #e0a800;
                transform: translateY(-1px);
            }
    </style>
</head>
<body>
    <header class="page-header">
        <h1>➕ Add New Student Record</h1>
        <nav>
            <a asp-action="Index" asp-controller="StudentPortal" class="back-link">⬅️ Back to Student List</a>
        </nav>
    </header>

    <main class="add-container">
        <form class="add-form" asp-action="Add" asp-controller="StudentPortal">

            <fieldset class="form-section">
                <legend>Academic & ID Data</legend>

              @*   <div class="form-group required">
                    <label for="id-number">Student ID (Internal Key)</label>
                    <input type="number" id="id-number" name="ID" placeholder="e.g., 1005" required>
                </div> *@

                <div class="form-group required">
                    <label asp-for="IDNumber">National ID Number</label>
                    <input asp-for="IDNumber" placeholder="National ID/Passport No.">
                </div>

                <div class="form-group required">
                    <label asp-for="Level">Academic Level</label>
                    <select asp-for="Level">
                        <option value="" disabled selected>Select Level</option>
                        <option value="1">Level 1</option>
                        <option value="2">Level 2</option>
                        <option value="3">Level 3</option>
                        <option value="4">Level 4</option>
                    </select>
                </div>

                <div class="form-group required">
                    <label asp-for="DepartmentID"></label>
                    <select asp-for="DepartmentID" asp-items="deptOptions">
                        <option value="0" disabled selected>Select Department</option> 
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="AddvisorID"></label>
                    <select asp-for="AddvisorID" asp-items="addvisorList">
                        <option Selected value="0">Select Advisor</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" >
                </div>
            </fieldset>

            <fieldset class="form-section">
                <legend>Personal Information</legend>

                <div class="form-group required">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName">
                </div>

                <div class="form-group">
                    <label asp-for="MiddleName"></label>
                    <input asp-for="MiddleName">
                </div>

                <div class="form-group required">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName">
                </div>

                <div class="form-group required">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" >
                </div>

                <div class="form-group">
                    <label asp-for="BirthPlace"></label>
                    <input asp-for="BirthPlace">
                </div>

                <div class="form-group required">
                    <label asp-for="Nationality"></label>
                    <input asp-for="Nationality">
                </div>

                <div class="form-group required">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender">
                        <option value="0" disabled selected>Select Gender</option>
                        <option value="1">Male</option>
                        <option value="2">Female</option>
                    </select>
                </div>

                @* <div class="form-group">
                    <label for="img">Profile Image URL (Optional)</label>
                    <input type="url" id="img" name="Img">
                </div> *@
            </fieldset>

            <fieldset class="form-section">
                <legend>Contact Information</legend>

                <div class="form-group required">
                    <label asp-for="Mobile"></label>
                    <input asp-for="Mobile">
                </div>

                <div class="form-group required">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" >
                </div>

                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address">
                </div>

                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City">
                </div>

                <div class="form-group">
                    <label asp-for="HomeTele"></label>
                    <input asp-for="HomeTele">
                </div>

                <div class="form-group">
                    <label asp-for="Fax"></label>
                    <input asp-for="Fax">
                </div>

                <div class="form-group">
                    <label asp-for="MailBox"></label>
                    <input asp-for="MailBox">
                </div>
            </fieldset>

            <div class="form-actions">
                <button type="submit" class="add-button">➕ Add Student</button>
                <button asp-action="Add" asp-controller="StudentPortal" type="reset" class="reset-button">Clear Form</button>
            </div>
        </form>
    </main> 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>