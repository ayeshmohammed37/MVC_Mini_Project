@model StudentEditModel

@{
    Layout = "";

    Student std = Model.Student;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student Profile</title>
    @* <link rel="stylesheet" href="edit-style.css"> *@
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f8f9fa; /* Light background */
            color: #333;
        }

        /* --- Header & Navigation --- */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 2px solid #0056b3;
            margin-bottom: 30px;
        }

            .page-header h1 {
                color: #007bff;
                font-size: 1.8em;
                margin: 0;
            }

        .back-link {
            text-decoration: none;
            color: #dc3545; /* Red for 'Cancel' action */
            padding: 8px 15px;
            border: 1px solid #dc3545;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            .back-link:hover {
                background-color: #dc3545;
                color: white;
            }

        /* --- Form Styling --- */
        .edit-container {
            max-width: 900px;
            margin: 0 auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .edit-form {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        /* Fieldset/Section Styling */
        .form-section {
            border: 1px solid #ccc;
            border-radius: 6px;
            padding: 20px;
            margin-bottom: 20px;
        }

            .form-section legend {
                font-size: 1.3em;
                font-weight: bold;
                color: #0056b3;
                padding: 0 10px;
            }

        /* Grid Layout for Form Groups */
        .form-section {
            display: grid;
            /* Two columns, or one column for smaller screens */
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        /* General Form Group */
        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                font-weight: 600;
                margin-bottom: 5px;
                color: #555;
            }

            /* Required field indicator */
            .form-group.required label::after {
                content: '*';
                color: #dc3545;
                margin-left: 5px;
            }

            .form-group input:not([readonly]),
            .form-group select {
                padding: 10px;
                border: 1px solid #ced4da;
                border-radius: 4px;
                font-size: 16px;
                width: 100%;
                box-sizing: border-box; /* Include padding/border in element's total width/height */
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                .form-group input:focus,
                .form-group select:focus {
                    border-color: #007bff;
                    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                    outline: none;
                }

        /* Readonly fields styling */
        #id-number {
            background-color: #e9ecef;
            color: #6c757d;
            cursor: not-allowed;
        }

        /* --- Action Buttons --- */
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            padding-top: 20px;
        }

            .form-actions button {
                padding: 12px 25px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-weight: bold;
                transition: background-color 0.3s, transform 0.2s;
            }

        .save-button {
            background-color: #28a745;
            color: white;
        }

            .save-button:hover {
                background-color: #1e7e34;
                transform: translateY(-1px);
            }

        .reset-button {
            background-color: #6c757d;
            color: white;
        }

            .reset-button:hover {
                background-color: #5a6268;
                transform: translateY(-1px);
            }


        /* ... (Existing CSS for body, header, form-group, etc. remains the same) ... */

        /* --- Action Buttons --- */
        .form-actions {
            display: flex;
            /* Changed to space-between to push 'Back to List' to the left and save/reset to the right */
            justify-content: space-between;
            gap: 15px;
            padding-top: 20px;
        }

            .form-actions button,
            .form-actions .list-button { /* Apply base button style to the link */
                padding: 12px 25px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-weight: bold;
                text-decoration: none; /* Crucial for the anchor tag (link) */
                text-align: center;
                transition: background-color 0.3s, transform 0.2s;
            }

        /* NEW STYLE FOR THE BACK TO LIST BUTTON */
        .list-button {
            background-color: #17a2b8; /* Info/Cyan color */
            color: white;
            /* Ensuring the link acts like a flex item */
            display: inline-block;
        }

            .list-button:hover {
                background-color: #138496;
                transform: translateY(-1px);
            }

        /* Existing Save and Reset Buttons */
        .save-button {
            background-color: #28a745;
            color: white;
        }
        /* ... (Existing hover styles for save-button and reset-button) ... */

        /* To align Save and Reset buttons together on the right */
        .form-actions-right {
            display: flex;
            gap: 15px;
        }
        /* Note: You would wrap the Save and Reset buttons in a <div> with class form-actions-right
           if you want the 'Back to List' button strictly on the left.
           However, the use of `justify-content: space-between;` on `.form-actions` achieves a similar effect. */
    </style>
</head>
<body>
    <header class="page-header">
        <h1>✏️ Edit Student Profile: @std.FirstName @std.LastName (ID: @std.ID)</h1>
        <nav>
            <a asp-action="Details" asp-controller="StudentPortal" asp-route-Id="@std.ID" class="back-link">
                ⬅️ Cancel & View Details
            </a>
        </nav>
    </header>

    <main class="edit-container">
        <form asp-action="Index" asp-controller="StudentPortal">

            <fieldset class="form-section">
                <legend>Identification & Core Data</legend>

                <div class="form-group required">
                    <label asp-for="@std.ID"></label>
                    <input asp-for="@std.ID" id="id-number" name="id-number" value="@std.ID" readonly required>
                </div>

                <div class="form-group required">
                    <label asp-for="@std.FirstName">First Name</label>
                    <input asp-for="@std.FirstName"  value="@std?.FirstName" required>
                </div>

                <div class="form-group">
                    <label asp-for="@std.MiddleName"></label>
                    <input asp-for="@std.MiddleName"  value="@std?.MiddleName">
                </div>

                <div class="form-group required">
                    <label asp-for="@std.LastName">Last Name</label>
                    <input asp-for="@std.LastName" value="@std?.LastName" required>
                </div>

                <div class="form-group required">
                    <label asp-for="@std.Level"></label>
                    <select asp-items="Model.Levels" asp-for="@std.Level" required>
                        @if(std.Level > 0)
                        {
                            <option value="@std.Level"> @std.Level</option>
                        }
                        else
                        {
                            <option value="0">--Select Level--</option>

                        }
                    </select>
                </div>
            </fieldset>

            <fieldset class="form-section">
                <legend>Personal Data</legend>

                <div class="form-group required">
                    <label for="birthdate">Date of Birth</label>
                    <input type="date" id="birthdate" name="birthdate" value="1999-05-15" required>
                </div>

                <div class="form-group">
                    <label for="birthplace">Place of Birth (Optional)</label>
                    <input type="text" id="birthplace" name="birthplace" value="Cairo">
                </div>

                <div class="form-group required">
                    <label for="nationality">Nationality</label>
                    <input type="text" id="nationality" name="nationality" value="Egyptian" required>
                </div>

                <div class="form-group required">
                    <label for="gender">Gender</label>
                    <select id="gender" name="gender" required>
                        <option value="Male" selected>Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </fieldset>

            <fieldset class="form-section">
                <legend>Contact Data</legend>

                <div class="form-group required">
                    <label for="mobile">Mobile Number</label>
                    <input type="tel" id="mobile" name="mobile" value="+201001234567" required>
                </div>

                <div class="form-group required">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" value="ahmed.said@student.edu" required>
                </div>

                <div class="form-group">
                    <label for="home-tele">Home Telephone (Optional)</label>
                    <input type="tel" id="home-tele" name="home-tele" value="+20224567890">
                </div>

                <div class="form-group">
                    <label for="address">Address (Optional)</label>
                    <input type="text" id="address" name="address" value="12 Omar St., Nasr City">
                </div>

                <div class="form-group">
                    <label for="city">City (Optional)</label>
                    <input type="text" id="city" name="city" value="Cairo">
                </div>

                <div class="form-group">
                    <label for="fax">Fax (Optional)</label>
                    <input type="tel" id="fax" name="fax" value="">
                </div>

                <div class="form-group">
                    <label for="mailbox">Mail Box / P.O. Box (Optional)</label>
                    <input type="text" id="mailbox" name="mailbox" value="12345">
                </div>
            </fieldset>

            <div class="form-actions">
                <a href="index.html" class="list-button">🔙 Back to Student List</a>

                <button type="submit" class="save-button">💾 Save Changes</button>
                <button type="reset" class="reset-button">🔄 Reset Form</button>
            </div>
        </form>
    </main>
</body>
</html>