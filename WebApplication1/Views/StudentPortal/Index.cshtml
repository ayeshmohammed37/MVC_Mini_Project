@{
    Layout = "";
}

@model List<Student>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Index</title>
    @* <link rel="stylesheet" href="style.css"> *@

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f9;
            color: #333;
        }

        /* --- Header & Navigation --- */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 10px;
        }

            .page-header h1 {
                color: #0056b3;
                margin: 0;
            }

        .top-nav a {
            margin-left: 15px;
            text-decoration: none;
            color: #007bff;
            padding: 8px 12px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .top-nav a:hover {
                background-color: #e2f0ff;
            }

        .top-nav .add-new {
            background-color: #28a745;
            color: white;
            padding: 8px 15px;
        }

            .top-nav .add-new:hover {
                background-color: #218838;
            }

        hr {
            border: 0;
            height: 1px;
            background-color: #ccc;
            margin: 20px 0;
        }

        /* --- Search & Filters --- */
        .search-filters h2 {
            color: #555;
            margin-top: 0;
        }

        .search-form {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

            .search-form input,
            .search-form select {
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

            .search-form button {
                padding: 10px 15px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .search-form button:hover {
                    background-color: #0056b3;
                }

        /* --- Student Table --- */
        .student-list-container h2 {
            color: #555;
        }

        .student-table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

            .student-table th,
            .student-table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .student-table thead th {
                background-color: #007bff;
                color: white;
                font-weight: bold;
            }

            .student-table tbody tr:hover {
                background-color: #f1f1f1;
            }

            /* Action Links Styling */
            .student-table td.actions a {
                text-decoration: none;
                padding: 5px 8px;
                border-radius: 3px;
                transition: background-color 0.3s;
            }

                .student-table td.actions a:nth-child(1) { /* Details */
                    color: #007bff;
                }

            .student-table td.actions .edit {
                color: #ffc107;
            }

            .student-table td.actions .delete {
                color: #dc3545;
            }

            .student-table td.actions a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header class="page-header">
        <h1>🎓 Student Management Index</h1>
        <nav class="top-nav">
            <a asp-action="Index" asp-controller="Home">🏠 Back to Home</a>
            <a asp-action="Add" asp-controller="StudentPortal" class="add-new">➕ Add New Student</a>
        </nav>
    </header>

    <hr>

    <section class="search-filters">
        <h2>🔍 Search & Filter Students</h2>
        <div class="search-form">
            <input type="text" id="search-name" placeholder="Search by Name...">
            <select id="filter-dept">
                <option value="">Filter by Department</option>
                <option value="CS">Computer Science</option>
                <option value="EE">Electrical Engineering</option>
                <option value="ME">Mechanical Engineering</option>
            </select>
            <select id="filter-level">
                <option value="">Filter by Level</option>
                <option value="1">Level 1</option>
                <option value="2">Level 2</option>
                <option value="3">Level 3</option>
                <option value="4">Level 4</option>
            </select>
            <button>Search</button>
        </div>
    </section>

    <hr>

    <main class="student-list-container">
        <h2>📋 Student List</h2>
        <table class="student-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>Department</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Student std in Model)
                {
                    <tr>
                        <td>
                            @std.ID
                        </td>
                        <td>
                            @std.FirstName @std.MiddleName @std.LastName
                        </td>
                        <td>
                            @std.Level
                        </td>
                        <td>
                            @std.Department.Name
                        </td>
                        <td class="actions">
                            <a asp-action="Details" asp-controller="StudentPortal" asp-route-Id="@std.ID">
                                Details
                            </a> |
                            <a asp-action="Edit" asp-controller="StudentPortal" asp-route-Id="@std.ID" class="edit">
                                Edit
                            </a> |
                            <a asp-action="DeleteConfirmation" asp-controller="StudentPortal" asp-route-Id="@std.ID" class="delete">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>